{{!-- Fila 1 --}}
<div class="container" style="margin-top: 50px;">
  <div class="row">
    <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión <i
          class="fa fa-space-shuttle" aria-hidden="true"></i>
      </a></p>
  </div>
</div>
<div class="row">
  {{!-- Fila 2 --}}
  <div class="col-4 text-end">
    <h6>Listado de Trabajos</h6>
  </div>
  <div class="col-8 text-center">
    <a class="btn btn-success" href="/admin/trabajos/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
      Nuevo</a>
  </div>
</div>
{{!-- Fila 3 --}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Número</th>
      <th scope="col">Título</th>
      <th scope="col">Imagen</th>
      <th scope="col" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each trabajos}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{titulo}}</td>
      <td>{{{imagen}}}</td>
      <td class="text-center">
        <a class="btn btn-secondary" href="/admin/trabajos/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
        <a class="btn btn-secondary" href="/admin/trabajos/modificar/{{id}}"><i class="fa fa-edit" aria-hidden="true"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>